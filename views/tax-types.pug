include includes/head.pug
block content
    body
        .loader-bg
            .loader-track
                .loader-fill
        include includes/sidenav.pug
        include includes/nav.pug
        .pcoded-main-container
            .pcoded-wrapper
                .pcoded-content
                    .pcoded-inner-content
                        .main-body
                            .page-wrapper
                                p #[a(href="#" data-toggle="modal" data-target="#addAccount" class="btn btn-primary") #[i.feather.icon-plus] New Tax]
                                div(class="modal fade" id="addAccount" role="dialog" aria-hidden="true")
                                    div(class="modal-dialog" role="document")
                                        div(class="modal-content")
                                            div(class="modal-header")
                                                h5 Create a new tax
                                                button(class="close" type="button" data-dismiss="modal" aria-label="Close")
                                                    span(aria-hidden="true") Ã—
                                            div(class="modal-body")
                                                form(method="post")
                                                    label(for="tax name") Name  
                                                    input(type="text" class="form-control mb-3" name="taxName" id="taxName" required) 
                                                    label(for="category name") Frequency
                                                    select(type="text" class="form-control mb-3" name="taxFrequency" required)
                                                        option(value="" selected disabled="disabled") Select one
                                                        option(value="Quarterly") Quarterly 
                                                        option(value="Annually") Annually
                                                    div(class="text-center")
                                                        input(type="submit", value="Proceed" class="btn btn-primary")
                                .row
                                    .col-sm-12
                                        .card
                                            .card-header
                                                h5 Taxes
                                            .card-body
                                                if taxes.length === 0 
                                                    h6 Go ahead to create payable taxes
                                                else 
                                                    .table-responsive
                                                        table.table.table-striped
                                                            thead 
                                                                tr 
                                                                    th S/N 
                                                                    th Tax Name 
                                                                    th Frequency 
                                                            tbody 
                                                                each tax  , i in taxes  
                                                                    tr 
                                                                        td #{i + 1}
                                                                        td #{tax.taxName} 
                                                                        td #{tax.frequency}

        include includes/footer.pug